<%- include('includes/head') %>

    <div style="display: flex; flex-direction: row; align-items: flex-start; width: 100%; margin: 20px;">
        <button onclick="window.location.href='/users?page=1'"
            style="color: white; width: 10%; cursor: pointer; display: flex; flex-direction: row; align-items: center; justify-content: center ;gap: 5px; background-color: #2563eb; padding: 2px; border-radius: 10px;">
            <ion-icon style="font-size: large;" name="arrow-back-circle"></ion-icon>
            <div>Voltar</div>
        </button><br>
    </div>

    <h1 style="margin: 20px;" class="text-center text-3xl font-semibold">
        <%= data.title %>
    </h1>

    <div style="padding: 10px;display: flex; flex-direction: column; align-items: center;  width: 60%; margin: auto;">
        <div style="padding: 10px;display: flex; flex-direction: column; align-items: flex-start; gap: 5px;">
            <p><strong>Tipo de Usuário:</strong>
                <%= data.user[0].role %>
            </p><br>
            <p><strong>Nome:</strong>
                <%= data.user[0].name %>
            </p><br>
            <p><strong>CPF:</strong>
                <%= data.user[0].cpf %>
            </p><br>
            <p><strong>Telefone Principal:</strong>
                <%= data.user[0].phone %>
            </p><br>

            <% if(data.phones.length>0 ){ %>
                <p><strong>Telefones Secundários:</strong>
                    <% } for (let i=0; i < data.phones.length; i++) {%>
                        <p>Telefone <%= i+1 %>:
                                <%= data.phones[i].phone %>
                        </p><br>
                        <% } %>

                            <p><strong>Email Principal:</strong>
                                <%= data.user[0].email %>
                            </p><br>

                            <% if(data.emails.length>0 ){ %>
                                <p><strong>Emails Secundários:</strong>
                                    <% } for (let i=0; i < data.emails.length; i++) {%>
                                        <p>Email <%= i+1 %>:
                                                <%= data.emails[i].email %>
                                        </p><br>
                                        <% } %>
        </div>
    </div>
    </body>

    </html>